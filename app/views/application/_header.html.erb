<header>
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>
          <%= link_to image_tag(Spree::Config[:logo], class: 'logo'), '/' %>
        </h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul><li><%= image_tag 'spinner.gif', id: 'loading' %></li></ul>
    </section>

    <section class="top-bar-section" id="links">
      <ul class="right">
        <%= nav_item :artists %>
        <%= nav_item :releases %>
        <%= nav_item :store, 'Shop' %>
      </ul>
    </section>
  </nav>

  <%= render 'flash' if flash.any? %>
</header>
