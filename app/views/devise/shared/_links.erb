<ul class="sub-nav user-links">
  <li>
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'button secondary' %>
    <% end -%>
  </li>

  <li>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'button secondary' %>
    <% end -%>
  </li>

  <li>
    <%- if devise_mapping.reimageable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'button secondary' %>
    <% end -%>
  </li>

  <li>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "button #{provider.to_s.parameterize}" %>
      <% end -%>
    <% end -%>
  </li>
</ul>
