<div class="event row">
  <div class="flyer large-3 columns">
    <%= link_to event.flyer_tag, event %>
  </div>
  <div class="info large-3 columns">
    <div class="title row">
      <h2><%= link_to event.name, event %></h2>
    </div>
    <div class="description row">
      <%= truncate event.gallery_description, 140, '...' %>
    </div>
  </div>
</div>
