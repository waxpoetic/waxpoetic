<div id="release">
  <div class="row">
    <div class="large-9 columns">
      <%= title release.title, cosmetic: release.page_title %>
    </div>
    <div class="large-3 columns buttons">
      <%= release.buy_button %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <table class="properties">
        <tr>
          <th>Released On:</th>
          <td><%= release.date %></td>
        </tr>
        <tr>
          <th>Catalog Number:</th>
          <td><%= release.catalog_number %></td>
        </tr>
      </table>

      <div class="tracks">
        <h3>Track Listing</h3>

        <%= release.track_list %>
      </div>
    </div>

    <div class="large-6 columns">
      <%= release.photo %>
    </div>
  </div>

  <div class="description">
    <%= release.description %>
  </div>
</div>

<%= render 'controls', resource: release %>
